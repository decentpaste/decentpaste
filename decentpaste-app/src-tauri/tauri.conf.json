{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DecentPaste",
  "version": "0.1.0",
  "identifier": "com.decentpaste.app",
  "build": {
    "beforeDevCommand": "lsof -i:1420 -sTCP:LISTEN -t >/dev/null || TAURI_DEV_HOST=$(ipconfig getifaddr en0) yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DecentPaste",
        "width": 420,
        "height": 650,
        "minWidth": 350,
        "minHeight": 500,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
