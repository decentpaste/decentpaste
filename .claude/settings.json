{
  "permissions": {
    "allow": [
      "Bash(grep:*)"
    ],
    "deny": [
      "Read(.idea/**)",
      "Read(.run/**)",
      "Read(target/**)",
      "Read(decentpaste-app/node_modules/**)",
      "Read(decentpaste-app/dist/**)"
    ],
    "ask": []
  },
  "outputStyle": "Explanatory",
  "lsp": {
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filePatterns": ["*.ts", "*.tsx"]
    },
    "rust": {
      "command": "rust-analyzer",
      "args": [],
      "filePatterns": ["*.rs"]
    }
  }
}
