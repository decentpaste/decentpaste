{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DecentPaste",
  "version": "0.1.0",
  "identifier": "com.decentpaste.app",
  "build": {
    "beforeDevCommand": "yarn run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DecentPaste",
        "width": 420,
        "height": 650,
        "minWidth": 350,
        "minHeight": 500,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENCMURBOEU4RDY1MUY2REMKUldUYzlsSFc2S2dkeTlzTmljb2xVcHRyandkRHFzaVhJYm5SQ0xWcFRGdGJUd20yS2xOeW92bXYK",
      "endpoints": [
        "https://github.com/decentpaste/decentpaste/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
